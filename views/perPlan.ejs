<%- include header %>

<link rel='stylesheet' href='/stylesheets/plan.css'/>
<main class="plan-making">
  <div class="container">
    <div class="plan-container">
      <nav class="col-sm-3" id="myScrollspy">
          <ul class="nav nav-pills nav-stacked">
            <li><span class="glyphicon glyphicon-tag"></span>&nbspDay <%= dayNo %></li>
          </ul>
      </nav>
      <div class="main">
        <form method="post" action='/profile/planmaking'>
          <div class="title-container">
            <div class="input-group">
              <span class="input-group-addon">Title</span>
              <input id="msg" type="text" class="form-control" name="title" placeholder="Please enter the title of your plan">
            </div>
          </div>
          <div class="brief-container">
            <div class="form-group">
              <textarea class="form-control" name="text" rows="25" id="comment" placeholder="Please write some brief introduction of your plan..."></textarea>
            </div>
          </div>
          <div class="save-btn">
            <button type="submit" class="btn btn-default" ><a href="/profile/planmaking">Save</a></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include footer %>
