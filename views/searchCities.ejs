<%- include header %>
<link rel="stylesheet" href="/stylesheets/searchresult.css">

<main class="page-search">
  <% if (posts.length==0) { %>
  <div class="noresult">

  <h1 class="middle">We are sorry we cannot find it</h1>
  </div>
  <% } else { %>
<div class="container">
    <h2 class="result-text">Search results</h2>
    <% for (index=0;index<posts.length;index++) {%>
    <div class="result-container">

      <a href="/<%= 'city/' + posts[index].path %>">
        <h4 class="result"><%=posts[index].name%></h4>
        
           Country: <%= posts[index].country %>
        <p class="result-box"><dd><%= posts[index].intro %></dd></p>
      </a>
    </div>
    <% } %>
</div>
  <% } %>


</main>

<% include footer %>
