<%- include header %>
<link rel='stylesheet' href='/stylesheets/note.css'/>
<main class="show-note">
  <div class="note-container">
    <div class="note-display">
      <!-- show title -->
      <h1 class="title"><%= note.title %></h1>
      <!-- show author -->
      <h4 class="author"><%= note.author.name %></h2>
      <!-- note body -->
      <p class="note-body"><%= note.body %></p>
      <!-- rating part -->
      <div class="com-btn">
        <div class="like-btn">
          <form method="post" action="/note/like">
            <button type="submit" class="btn btn-default" name="like">
              <span class="glyphicon glyphicon-thumbs-up"></span>
              Like: <%= note.like_counts %>
            </button>
          </form>
        </div>
        <div class="dislike-btn">
          <form method="post" action="/note/dislike">
            <button type="submit" class="btn btn-default" name="dislike">
              <span class="glyphicon glyphicon-thumbs-down"></span>
              Dislike: <%= note.dislike_counts %>
            </button>
          </form>
        </div>
      </div>
    </div>

  </div>
  <div class="comment-container">
    <div class="post-comment">
      <!-- comment part -->
      <form method="post" action="/note/comment">
        <div class="show-title">
          <div class="input-group">
            <span class="input-group-addon">Note Title</span>
            <input id="title" type="text" class="form-control" name="title" value="<%= note.title %>" disabled="disable">
          </div>
        </div>
        <div class="make-comments">
          <div class="form-group">
            <label >Your Comment:</label>
            <textarea class="form-control" id="comment" name="text" rows="5" cols="30" placeholder="Make some comments"></textarea>
          </div>
          <button type="submit" class="btn btn-default">Save</button>
        </div>
      </form>

    <div class="pub-comment">
      <% for (index=0; index<5; index++){ %>
        <div class="input-group">
          <span class="input-group-addon">Comment Author</span>
          <input id="title" type="text" class="form-control" name="title" value="<%= note.comments[index].author.name %>" disabled="disable">
        </div>
        <div class="form-group">
          <textarea class="form-control" id="comment" name="text" rows="5" cols="30" disabled="disable">
            <%= note.comments[index].content %>
          </textarea>
        </div>
      <% } %>
    </div>

</div>


  </div>
</main>
<%- include footer %>
