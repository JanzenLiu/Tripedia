<%- include header %>

<link rel='stylesheet' href='/stylesheets/post.css'/>
<main class="write-note">
  <div class="container">
    <div class="post-container">
      <form method="post">
        <div class="input-group" style="margin-left:290px; margin-bottom:20px;">
          <span class="input-group-addon">Title</span>
          <input id="title" type="text" class="form-control" name="title"
          style="width: 50%" value="<%= note.title %>" disabled="disable">
        </div>
        <div class="main">
          <div class="side-input">
            <div class="add-place">
              <div class="input-group" style="margin-top: 10px;">
                <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                <input id="citi1" type="text" class="form-control" name="citi1" placeholder="Citi 1">
              </div>
              <div class="input-group" style="margin-top: 10px;">
                <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                <input id="citi2" type="text" class="form-control" name="citi2" placeholder="Citi 2">
              </div>
              <div class="input-group" style="margin-top: 10px;">
                <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                <input id="citi3" type="text" class="form-control" name="citi3" placeholder="Citi 3">
              </div>
            </div>
            <div class="add-place">
              <div class="input-group" style="margin-top: 10px;">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pushpin"></i></span>
                <input id="attraction1" type="text" class="form-control" name="attraction1" placeholder="Attraction 1">
              </div>
              <div class="input-group" style="margin-top: 10px;">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pushpin"></i></span>
                <input id="attraction2" type="text" class="form-control" name="attraction2" placeholder="Attraction 2">
              </div>
              <div class="input-group" style="margin-top: 10px;">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pushpin"></i></span>
                <input id="attraction3" type="text" class="form-control" name="attraction3" placeholder="Attraction 3">
              </div>
            </div>
          </div>
          <div class="main-input">
            <div class="form-group">
              <textarea class="form-control" rows="40" id="note" name="post"><%= note.body %></textarea>
            </div>
            <div class="save-btn">
              <button type="submit" class="btn btn-default">Save</button>
            </div>
          </div>
        </div>

      </form>
    </div>
  </div>
</main>

<%- include footer %>
